	<build>
		<plugins>
			<!-- plugin 发布 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<!-- spring boot 运行插件 -->
			<plugin>
			    <groupId>org.springframework.boot</groupId>
			    <artifactId>spring-boot-maven-plugin</artifactId>
			    <configuration>
			    	<mainClass>com.zk.server.central.ZKSerCenSpringBootMain</mainClass>
				</configuration>
			</plugin>
			<!-- plugin 资源配置文件处理 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>UTF-8</encoding>
					<useDefaultDelimiters>true</useDefaultDelimiters>
					<resources>
						<resource>
							<filtering>true</filtering>
							<directory>${basedir}/src/main/resources</directory>
							 <!-- 指定 目标目录 -->
							<targetPath>${project.build.directory}/classes</targetPath>
							<includes>  
			                    <include>**/**</include>  
			                </includes>  
						</resource>
						<resource>
							<filtering>true</filtering>
							<directory>src/main/ui</directory>  
							 <!-- 注意此次必须要放在此目录下才能被访问到 -->
			                <!-- META-INF/resources 为 spring boot jar 时查找 jsp 的根目录，参见 com.bs.spring.boot.demo.listener.ListenerMain 示列
			               		 <targetPath>META-INF/resources/jsp</targetPath>  
			               	-->
							<targetPath>${project.build.directory}/classes</targetPath>
							<includes>  
			                    <include>**/**</include>  
			                </includes>  
						</resource>
						<resource>
							<filtering>true</filtering>
							<directory>${basedir}/src/env/${package.env}</directory>
							<targetPath>${project.build.directory}/classes</targetPath>
						</resource>
					</resources>
				</configuration>
			</plugin>
		</plugins>
		
